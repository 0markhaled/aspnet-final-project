@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
    .slideshow-container {
        max-width: 1000px;
        position: relative;
        margin: auto;
    }

    .slideshow {
        display: none;
    }

    .mySlides img {
        width: 100%;
        height: 400px;
        object-fit: cover;
    }

    .prev,
    .next {
        position: absolute;
        top: 50%;
        width: auto;
        margin-top: -22px;
        padding: 16px;
        color: #fff;
        font-weight: bold;
        font-size: 18px;
        transition: 0.6s ease;
        border-radius: 0 3px 3px 0;
        user-select: none;
    }

    .next {
        right: 0;
        border-radius: 3px 0 0 3px;
    }

    .prev:hover,
    .next:hover {
        background-color: rgba(0, 0, 0, 0.8);
    }

    .fade:not(.show) {
        opacity: 1;
    }
</style>

<div class="text-center">
    <h3>Welcome to the Second Chance Pet Adoption</h3>
</div>

<div class="slideshow-container">
    <div class="mySlides">
        <img src="/images/placeholderone.jpg" alt="Slide 1">
        <div class="text">Animal name here</div>
    </div>

    <div class="mySlides">
        <img src="/images/placeholdertwo.jpg" alt="Slide 2">
        <div class="text">Caption Text</div>
    </div>

    <div class="mySlides">
        <img src="/images/placeholderthree.png" alt="Slide 3">
        <div class="text">Caption Text</div>
    </div>

    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>

</div>
<div class="video">
    <iframe width="1000" height="640" src="https://www.youtube.com/embed/zkv1IyCdMaI" frameborder="0"
        allowfullscreen></iframe>
</div>


<script src="/js/slideshow.js"></script>
